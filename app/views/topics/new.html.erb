<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <h1 class="text-center">投稿</h1>
        <%= form_for @topic do |f| %>
          <div class="form-group">
            <%= f.label "タイトル", class: "text-white" %>
            <%= f.text_area :title, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label "画像", class: "text-white"%>
            <%= f.file_field :image, class: "form-control"%>
          </div>
          <div class="form-group">
            <%= f.label "投稿内容", class: "text-white"%>
            <%= f.text_area :contents, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label "駐輪場情報", class: "text-white" %>
            <%= f.select :parking_info, ["無し", "1〜5台", "6〜10台", "10台以上"], class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label "食事処", class: "text-white" %>
            <%= f.text_area :restaurant_info, class: 'form-control' %>
          </div>
          <%= f.submit '投稿する', class: 'btn btn-white btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
