<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            <p class="topic-text">
              <%= topic.contents %>
            </p>
            <% if !topic.like_users.include?(current_user) %>
              <%= link_to likes_path(topic_id: topic.id), method: :post do %>
                <i class="far fa-heart like-btn"></i>
              <% end %>
            <% else %>
              <%= link_to likes_path(topic_id: topic.id), method: :delete do %>
                <i class="far fa-heart unlike-btn"></i>
              <% end %>
            <% end %>
            <%= topic.like_users.count %>
            <%= link_to new_comment_path(topic_id: topic.id) do %>
              <%= image_tag "icons/comment.png", class: "topic-index-icon" %>
            <% end %>
            <div class="comments">
              <h4>コメント</h4>
              <% topic.comments.each do |comment| %>
                <div class="comments-left">
                  <% if comment.user.image? %>
                    <%= image_tag comment.user.image.url, class: "user-icon" %>
                  <% else %>
                    <%= image_tag "/assets/default.jpg", class: "user-icon" %>
                  <% end %>
                </div>
                <div class="comment-contents">
                  <div class="comments-right">
                    <p class="comment-date"><%= comment.updated_at %></p>
                    <ul>
                      <li>
                        <%= link_to edit_comment_path(id: comment.id) do %>
                          <p class="comment-date, comment-edit">編集</p>
                        <% end %>
                      </li>
                      <li>
                        <%= link_to comment_path(id: comment.id), method: :delete do %>
                          <p class="comment-date, comment-edit">削除</p>
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </div>
                <p><%= comment.user.name %></p>
                <p><%= comment.comment %></p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>