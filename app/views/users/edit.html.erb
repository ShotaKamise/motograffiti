<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-black">Edit User Info</h1>
        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.label :name, class: 'text-white' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email, class: 'text-white' %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :image, class: "text-white" %>
            <%= f.file_field :image, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :user_background, class: 'text-white' %>
            <%= f.file_field :user_background, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :recent_info, class: 'text-white' %>
            <%= f.text_field :recent_info, class: 'form-control' %>
          </div>

          <%= f.submit "編集する", class: 'btn-block btn-white' %>
        <% end %>
      </div>
    </div>
  </div>
</div>